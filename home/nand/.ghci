let asTypeIn :: a -> (a -> b) -> a; a `asTypeIn` f = let _ = f a in a; infixl 0 `asTypeIn`
let f `asAppliedTo` x = f `asTypeIn` \g -> g x; infixl 0 `asAppliedTo`

