URxvt.font: xft:Terminus:pixelsize=20,xft:DejaVu Sans Mono:pixelsize=16,xft:unifont,xft:STIX,xft:STIX Math

URxvt.saveLines:        12000
URxvt.scrollBar:        false
URxvt.urgentOnBell:     true

URxvt.scrollTtyOutput:      false
URxvt.scrollWithBuffer:     true
URxvt.scrollTtyKeypress:    true

URxvt.fading: 10

! perl extensions
URxvt.perl-ext: default,url-select,clipboard

! for yankable URLs

URxvt.keysym.M-y: perl:url-select:select_next
URxvt.url-select.launcher: /usr/bin/firefox -new-tab
URxvt.url-select.button: -
URxvt.matcher.pattern: (?:https?://|ftp://|news://|mailto:|file://|\\bwww\\.)[\\w\\-\\@;\\/?:&=%\\$.+!*\\x27,~#\\x{2603}]*(\\([\\w\\-\\@;\\/?:&=%\\$.+!*\\x27,~#]*\\)|[\\w\\-\\@;\\/?:&=%\\$+*~])+

! for using the clipboard

URxvt.keysym.4-c: perl:clipboard:copy
URxvt.keysym.4-v: perl:clipboard:paste

! ???
Xcursor.size: 16

