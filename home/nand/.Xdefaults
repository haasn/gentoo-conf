! URxvt stuff

URxvt.font: xft:monospace:pixelsize=14

URxvt.letterSpace:      true
URxvt.saveLines:        12000
URxvt.scrollBar:        false
URxvt.urgentOnBell:     true

URxvt.scrollTtyOutput:      false
URxvt.scrollWithBuffer:     true
URxvt.scrollTtyKeypress:    true

URxvt.fading: 10
URxvt.inputMethod: scim
URxvt.preeditType: OverTheSpot

! perl extensions
URxvt.perl-ext: default,url-select,clipboard

! for yankable URLs

URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: newtab
URxvt.url-select.button: -
URxvt.matcher.pattern: (?:https?://|ftp://|news://|mailto:|file://|\\bwww\\.)[\\w\\-\\@;\\/?:&=%\\$.+!*\\x27,~#\\x{2603}]*(\\([\\w\\-\\@;\\/?:&=%\\$.+!*\\x27,~#]*\\)|[\\w\\-\\@;\\/?:&=%\\$+*~])+

! for using the clipboard

URxvt.keysym.4-c: perl:clipboard:copy
URxvt.keysym.4-v: perl:clipboard:paste

! ???
! Xcursor.size: 16
Xft.dpi: 150
Xft.antialias: 0
Xft.rgba: none
Xft.hinting: 1
Xft.hintstyle: hintfull

! rofi stuff

rofi.lines: 20
rofi.width: 30
rofi.columns: 3
rofi.font: terminus 14
rofi.bw: 2
rofi.color-window: #0e1112,#75b2b3,#75b2b3
rofi.color-normal: #0e1112,#ddccbb,#0B0E0E,#323232,#ddccbb
rofi.hide-scrollbar: true
rofi.terminal: urxvtc

